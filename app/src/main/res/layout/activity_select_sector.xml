<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ReportFormsActivity">

    <ImageButton
        android:id="@+id/back_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/back"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:background="@drawable/circle_button"
        android:src="@drawable/baseline_arrow_back_ios_24"
        />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/select_sector"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/title_hint_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/select_sector_sub_header"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:layout_marginBottom="15dp"
        />


    <Button
        android:id="@+id/finance_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:onClick="displayFinanceActivity"
        android:text="@string/finance"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        />

    <Button
        android:id="@+id/education_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:onClick="displayEducationActivity"
        android:text="@string/education"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        />

    <Button
        android:id="@+id/social_media_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:onClick="displaySocialMediaActivity"
        android:text="@string/social_media"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        />
</LinearLayout>