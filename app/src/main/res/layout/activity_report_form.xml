<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    tools:context=".EducationActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/education"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    <ScrollView
        android:id="@+id/scrolling_form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/category_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/crime_category"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/category_spinner" />


            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category_tv" />


            <TextView
                android:id="@+id/parties_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parties_involved"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="110dp"
                app:layout_constraintTop_toBottomOf="@id/category_spinner" />

            <Spinner
                android:id="@+id/parties_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/parties_tv" />

            <TextView
                android:id="@+id/devices_til"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/devices_involved"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/parties_spinner" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/institute_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/name_of_educational_institute"
                app:boxBackgroundColor="#FFFFFF"
                app:boxBackgroundMode="outline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/devices_til">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/date_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/date_with_hint"
                app:boxBackgroundColor="#FFFFFF"
                app:boxBackgroundMode="outline"
                app:layout_constraintEnd_toStartOf="@id/time_til"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/devices_til">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date|text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/time_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/time_with_hint"
                app:boxBackgroundColor="#FFFFFF"
                app:boxBackgroundMode="outline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/date_til"
                app:layout_constraintTop_toBottomOf="@id/devices_til">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|time" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/details_til"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/description"
                app:boxBackgroundColor="#FFFFFF"
                app:boxBackgroundMode="outline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time_til">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="13"
                    android:minLines="5" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/evidence_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_evidence"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_til" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit" />


</LinearLayout>